{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "Invoke-Build Test -AssertStyle Client",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [ "$pester" ],
            "presentation": {
                "clear": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "Invoke-Build Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
